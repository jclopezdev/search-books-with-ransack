<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div class="row">
  <div class="col-3">
    <%= render 'filters' %>
  </div>

  <div class="col-9">
    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Isbn</th>
        <th><%= sort_link(@q, :name) %></td>
        <th>Author</th>
        <th><%= sort_link(@q, :year, default_order: :desc) %></td>
        <th>Price</th>
        <th>Status</th>
        <th>Genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.isbn %></td>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= book.year %></td>
          <td><%= book.price %></td>
          <td><%= book.status %></td>
          <td><%= book.genre %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @books, list_classes: %w(pagination justify-content-end) %>

  <br>

  <%= link_to 'New Book', new_book_path %>

  </div>

</div>
